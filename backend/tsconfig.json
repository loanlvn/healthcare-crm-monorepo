{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@config/*": ["config/*"],
      "@infra/*": ["src/infra/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"]
    },
    "outDir": "dist",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES2022",
    "types": ["node"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "prisma" ,"server.ts", "app.ts", "config", "scripts"]
}